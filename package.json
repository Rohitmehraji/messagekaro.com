{
  "name": "messagekaro-com",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run start",
    "build": "npm --workspace backend run build",
    "lint": "npm --workspace backend run lint && npm --workspace frontend run lint"
  }
}
